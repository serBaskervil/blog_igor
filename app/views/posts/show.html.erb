<div id="post_content">
	<h1 class="title">
		<%= @post.title %>
	</h1>

	<p class="date">
		Створено <%= time_ago_in_words(@post.created_at) %> тому
		| <%= link_to "Редагувати", edit_post_path(@post) %>
		| <%= link_to "Видалити", post_path(@post), method: :delete, data: { confirm: 'Ви впевнені що хчете видалити пост?'} %>
	</p>

	<p class="body">
		<%= @post.body%>
	</p>

	<div id="comments">
		<h2><%= @post.comments.count %> Коментарів</h2>
		<%= render @post.comments %>

		<h3>Додайте свій коментар</h3>
		<%= render "comments/form" %>
	</div>
</div>