<%= form_for @post do |f| %>
	<% if @post.errors.any? %>
		<div id="errors">
			<h2><%= @post.errors.count %> помилки не дали змогу зберегти пост</h2>
			<ul>
				<% @post.errors.full_messages.each do |msg| %>
					<li><%= msg %></li>
				<% end %>
			</ul>
		</div>
	<% end %>
	<p>
	<%= f.label :Заголовок %><br>
	<%= f.text_field :title %>
	</p>
	<p>
		<%= f.label :Пост %><br>
		<%= f.text_area :body %>
	</p>
	<p>
		
		<% if current_page?(new_post_path) %>
			<%= f.submit "Створити пост"%>
		<% elsif current_page?(edit_post_path(@post[:id])) %>
			<%= f.submit "Оновити пост"%>
		<% end %>
	</p>
<%end%>